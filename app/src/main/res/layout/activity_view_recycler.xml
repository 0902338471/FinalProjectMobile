<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/parsed_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:padding="2dp"
        android:src="@drawable/download"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/parsed_name"
        android:layout_width="286dp"
        android:layout_height="39dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="23dp"
        android:text="parse the name here"
        android:textColor="#000"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/parsed_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/parsed_date"
        android:layout_width="122dp"
        android:layout_height="18dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="187dp"
        android:text="parse date here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/parsed_avatar"
        app:layout_constraintTop_toBottomOf="@+id/parsed_name" />

    <TextView
        android:id="@+id/parsed_status"
        android:layout_width="373dp"
        android:layout_height="87dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="24dp"
        android:scrollbars="vertical"
        android:text="parse status here"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parsed_avatar" />

    <ImageView
        android:id="@+id/parsed_image"
        android:layout_width="358dp"
        android:layout_height="271dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parsed_status" />

</androidx.constraintlayout.widget.ConstraintLayout>